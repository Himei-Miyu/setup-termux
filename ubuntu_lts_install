#!/usr/bin/bash

_0=( "\e[0m" "\e[34m" "\e[32m" "\e[36m" "\e[31m" "\e[35m" "\e[33m" "\e[37m" "\e[90m" "\e[94m" "\e[30m" "\e[92m" "\e[94m" "\e[91m" "\e[95m" "\e[93m" "\e[97m" "\e[1;m" "\e[2;m" "\e[3;m" "\e[4;m" "\e[9;m" )

apt-get update
pkg i -y proot-distro
proot-distro install ubuntu

[ $? -gt 0 ] && echo -e "${_0[14]}${_0[17]}HIMEI ${_0[8]}> ${_0[4]}INSTALL NOT COMPLETE${_0[0]}"

proot-distro login ubuntu --shared-tmp

_0=( "\e[0m" "\e[34m" "\e[32m" "\e[36m" "\e[31m" "\e[35m" "\e[33m" "\e[37m" "\e[90m" "\e[94m" "\e[30m" "\e[92m" "\e[94m" "\e[91m" "\e[95m" "\e[93m" "\e[97m" "\e[1;m" "\e[2;m" "\e[3;m" "\e[4;m" "\e[9;m" )

apt-get update && apt-get -y full-upgrade

[ $? == 0 ] && eval "clear && echo -e \"${_0[15]}\$(cat /etc/os-release)\n${_0[14]}${_0[17]}HIMEI ${_0[8]}> ${_0[2]}INSTALL COMPLETED\n${_0[15]}Tip ${_0[8]}> ${_0[11]}use command ${_0[0]}\\\"${_0[12]}proot-distro login ubuntu${_0[0]}\\\"\"" || echo -e "${_0[14]}${_0[17]}HIMEI ${_0[8]}> ${_0[4]}INSTALL NOT COMPLETE${_0[0]}"
