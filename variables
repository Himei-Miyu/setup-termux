#!/bin/bash

# Colors
declare -a _C=("\e[0m" "\e[34m" "\e[32m" "\e[36m" "\e[31m" "\e[35m" "\e[33m" "\e[37m" "\e[90m" "\e[94m" "\e[30m" "\e[92m" "\e[94m" "\e[91m" "\e[95m" "\e[93m" "\e[97m" "\e[1;m" "\e[2;m" "\e[3;m" "\e[4;m" "\e[9;m");

# Prefix name
declare -a _H=("${_C[14]}${_C[17]}HIMEI ${_C[8]}> ");

# Messages
declare -a _M=(
"${_C[11]}Updating packages${_C[0]}"
"${_C[12]}Update packages completed${_C[0]}"
"${_C[11]}Installing packages${_C[0]}"
"${_C[12]}Install packages completed${_C[0]}"
"${_C[11]}Installing packages additional${_C[0]}"
"${_C[12]}Install packages additional completed${_C[0]}"
"${_C[11]}Installing ubuntu${_C[0]}"
"${_C[12]}Install ubuntu completed${_C[0]}"
"${_C[11]}Starting install packages ubuntu${_C[0]}"
"${_C[11]}Downgrading ubuntu${_C[0]}"
"${_C[12]}Downgrade ubuntu completed${_C[0]}"
"${_C[15]}Starting repair dpkg package${_C[0]}"
"${_C[15]}Repair dpkg package completed${_C[0]}"
"${_C[11]}Installing MongoDB CLI & Server${_C[0]}"
"${_C[12]}Install MongoDB completed${_C[0]}");

# Error messages
declare -a _EM=(
"${_H[0]}${_C[4]}Ubuntu is not installed${_C[0]}"
"${_H[0]}${_C[4]}This command can not run outside ubuntu${_C[0]}");

# Regular Expression
declare -a _R=("^$\|WARNING");

# Errors
declare -a _E=(
'sed -i "/${_R[0]}/d" Himei/error.log && echo -e "${_H[0]}${_C[13]}$(cat Himei/error.log)${_C[0]}" && exit 1'
'cat "Himei/error.log" && exit 1'
'echo -e "${_EM[0]}" && exit 1'
'echo -e "${_EM[1]}" && exit 1');
