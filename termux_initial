#!/bin/bash

# [ TERMUX UPDATE & UPGRADE ]

mkdir -p Himei;
touch Himei/error.log Himei/install.log

! [ -e "Himei/variables" ] && curl https://raw.githubusercontent.com/Miyu-Tenshi/termux-installs/main/variables -o Himei/variables && . Himei/variables
[ -e "Himei/variables" ] && . Himei/variables;

echo -e "${_H[0]}${_M[0]}";

apt-get update 2> Himei/error.log 1> Himei/install.log || eval ${_E[0]};

echo -e "${_H[0]}${_M[1]}";
echo -e "${_H[0]}${_M[2]}";

[ $_ALLOW_DOWNGRADES == "enabled" ] && _ALLOW_DOWNGRADES="--allow-downgrades"; 
apt-get -o Dpkg::Options::="--force-confdef" $_ALLOW_DOWNGRADES -y dist-upgrade 2> Himei/error.log 1> Himei/install.log || eval ${_E[0]};

echo -e "${_H[0]}${_M[3]}";
