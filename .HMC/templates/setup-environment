#!/data/data/com.termux/files/usr/bin/bash

cat > .HMC-setup << EOF
    printf "[\e[1A\e[1Gi] Updating packages\n";
    apt-get -qq update && printf "[\e[1A\e[1G✔] Update packages completed";
    printf "[\e[1A\e[1Gi] Upgrading packages";
    apt-get -qq -o Dpkg::Options::=--force-confdef --allow-downgrades -y dist-upgrade && printf "[\e[1A\e[1G✔] Upgrade packages completed";
    printf "[\e[1A\e[1Gi] Environments setup";
    export _HMC_PATH=$HOME/termux-installs/.HMC;
    export PATH=$PATH:$_HMC_PATH/bin;
    printf "[\e[1A\e[1G✔] Environments setup completed";
EOF